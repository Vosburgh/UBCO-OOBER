<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#000000"
    android:orientation = "horizontal"
    >


    <ImageView
        android:id="@+id/notif_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:src="@android:drawable/ic_dialog_info"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/notif_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="Sample destination text"
        android:textColor="#ffffff"
        android:maxLines="1"

        android:layout_toRightOf="@+id/notif_icon"

        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/notif_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_below="@id/notif_destination"
        android:text="Sample time text"
        android:textColor="#ffffff"
        android:maxLines="1"
        android:layout_alignLeft="@+id/notif_destination"
       />

    <TextView
        android:id="@+id/notif_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_below="@id/notif_time"
        android:text="Sample space text"
        android:textColor="#ffffff"
        android:maxLines="1"
        android:layout_alignLeft="@+id/notif_destination"
        />

    <Button
        android:id="@+id/notif_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="View more">

    </Button>



</RelativeLayout>